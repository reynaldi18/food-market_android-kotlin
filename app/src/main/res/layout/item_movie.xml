<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import
            alias="ch"
            type="com.movieApp.app.helper.CurrencyHelper" />

        <variable
            name="data"
            type="com.movieApp.app.data.Movie" />

        <variable
            name="handler"
            type="com.movieApp.app.core.CoreListAdapter.Holder" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detail"
        style="@style/Clickable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_movie_height"
        android:layout_margin="@dimen/content"
        app:cardCornerRadius="@dimen/card_radius_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{(v) -> handler.onClick(v, position)}"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:srcUrl="@{data.image}"
                    tools:srcCompat="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_small"
                android:layout_marginTop="@dimen/content_small"
                android:layout_marginBottom="@dimen/content_small"
                android:maxLines="1"
                android:text="@{data.originalTitle}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>