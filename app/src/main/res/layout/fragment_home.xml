<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.fMarket.app.ui.vm.HomeVm" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:displayedChild="@{vm.state}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_app"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/content_padding"
                    android:theme="@style/Toolbar.White"
                    app:contentInsetStart="@dimen/content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/layout_toolbar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:subtitle="@{@string/label_dashboard_desc}"
                            app:title="@{@string/app_name}" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/thumbnail_placeholder"
                            android:layout_height="@dimen/thumbnail_placeholder"
                            app:cardCornerRadius="@dimen/card_radius_small"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                app:srcUrl="@{vm.user.photo}"
                                tools:srcCompat="@tools:sample/avatars" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/content_padding"
                            android:paddingStart="@dimen/content_padding"
                            android:measureAllChildren="false"
                            tools:ignore="RtlSymmetry">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                app:adapter="@{vm.highlightAdapter}"
                                app:verticalOrientation="@{false}" />
                        </ViewFlipper>

                        <com.google.android.material.appbar.AppBarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/ThemeOverlay.AppCompat.Dark"
                            app:elevation="0dp">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tl_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:elevation="0dp"
                                app:elevation="0dp"
                                app:tabGravity="fill"
                                app:tabIndicatorColor="@color/black"
                                app:tabMode="fixed"
                                app:tabSelectedTextColor="@color/black"
                                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                                app:tabTextColor="@color/gray" />

                        </com.google.android.material.appbar.AppBarLayout>

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vp_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <include
                android:id="@+id/progress"
                layout="@layout/layout_progress" />

            <include
                layout="@layout/layout_no_data"
                app:text="@{vm.noData}" />

            <include
                android:id="@+id/layout_failed"
                layout="@layout/layout_failed"
                app:text="@{vm.listMessage}" />
        </ViewFlipper>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>